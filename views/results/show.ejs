<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Show Result</title>
</head>
<body>
  <% let arr = [result.English,result.physics,result.Maths,result.Chemistry]%> 

<% let sum = 0;%>
<% arr.forEach(number => { %>
  <% sum += number;%>
<%})%>

<%let percentage = sum /4%> 




<!-- console.log(result); -->
    <nav class="navbar navbar-dark bg-dark container d-flex justify-content-center">
        <a class="navbar-brand " href="#" style="font-weight: bolder;">
           EasyResult
        </a>
      </nav>
    <div class="container">
        <div> <strong>Name:</strong> <%= result.name %> </div>
        <div> <strong>Roll No:</strong> <%= result.rollNo %> </div>
        
    <table class="table table-striped">
        <tr>
            <th scope="col">Sno.</th>
            <th scope="col">subject</th>
            <th scope="col">Max Marks</th>
            <th scope="col">Mark</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>English</td>
            <td>100</td>
            <td><%= result.English%></td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Physics</td>
            <td>100</td>
            <td><%= result.physics%></td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td >Maths</td>
            <td>100</td>
            <td><%= result.Maths%></td>
          </tr>
          <tr>
            <th scope="row">4</th>
            <td>Chemistry</td>
            <td>100</td>
            <td><%= result.Chemistry%></td>
          </tr>
          <tr>
            <th scope="row">5</th>
            <td>TOTAL</td>
            <td></td>
            <td><%=sum%></td>
          </tr>
          <tr>
            <th scope="row">6</th>
            <td>percentage</td>
            <td></td>
            <td><%= percentage %></td>
            </tr>
            
            <tr>
              <th scope="row"></th>
              <td></td>
              <td class="text-danger "> <% if (percentage < 35) {%>
                <%="Student Fail The Exam" %>
                
                <%}%>
              </td>
              <td><% %></td>
              </tr>

            
        </tbody>
      </table>
    </div>
    <div class=" d-flex justify-content-center">
      <button style="margin: 5px; text-decoration: none;" class="btn btn-dark"><a class="text-white" href="/results">Back To List</a></button>
      <button style="margin: 5px; text-decoration: none;" class="btn btn-dark"><a class="text-white" href="/results/<%= result.rollNo %>/edit ">Edit Result</a></button>
    <form action="/results/<%= result.rollNo %>?_method=DELETE" method="POST">
    <button style="margin: 5px;" class="btn btn-dark">DELETE</button>
    </div>
  </form>

  </body>
</html>